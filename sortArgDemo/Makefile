# compiler flags.  -g for debug, -O3 for optimization
CFLAGS=-g -O3

# first target is built by default
all: sortargs bst-test

# include file dependencies
bst.o: bst.h
sortargs.o: bst.h

# $@=target (what you're making), $^=prerequisites (what it needs)
sortargs: bst.o sortargs.o
	cc -o $@ $^ $(CFLAGS)
bst-test: bst.o bst-test.o
	cc -o $@ $^ $(CFLAGS)


# deletes files generated by compilation
clean:
	rm -f *.o sortargs
